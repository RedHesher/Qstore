@model IEnumerable<Qstore.Models.Product>

@{
    ViewBag.Title = "Index";
}

<table id="products" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@Html.ActionLink(product.Name, "Product/" + product.Id)</td>
                <td>@product.Price</td>
                <td>@product.Category</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#products').DataTable();
        });
    </script>
}